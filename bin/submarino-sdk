namespace Gpupo\SubmarinoSdk\Console\Command;

require dirname(__DIR__).'/config/bootstrap.php';

use Gpupo\SubmarinoSdk\Console\Application;
use Symfony\Component\Console\Input\ArgvInput;
use Symfony\Component\Console\Input\InputOption;
use Symfony\Component\Console\Input\InputArgument;
use Symfony\Component\Console\Output\ConsoleOutput;
use Monolog\Logger;
use Monolog\Handler\StreamHandler;
use Symfony\Component\Yaml\Yaml;
use Symfony\Component\Finder\Finder;
use Symfony\Component\Cache\Simple\FilesystemCache;

$cache = new FilesystemCache();

$app = new Application("submarino-sdk");

$input = new ArgvInput();
$output = new ConsoleOutput();

$logger = new Logger('console');
$config = [];
// $config = $app->getConfig('submarino');

$localFilename = sprintf('var/data/markethub-submarino-%d.yaml', $config['client_id']);
if (file_exists($localFilename)) {
    $data = Yaml::parseFile($localFilename);
    $config = array_merge($config, $data);
}

$factory = $app->factorySdk($config, $logger, true, $cache);

$finder = new Finder();
$finder->files()->name("*Command.php")->notName('*Abstract*')->in('./src/Console/Command');

foreach ($finder as $file) {
    $class = str_replace('.php', '', $file->getRelativePathname());
    $segments = explode('/', $class);
    $class = __NAMESPACE__ . '\\' .implode('\\', $segments);
    $app->add(new $class($factory));
}

$app->doRun($input, $output);
